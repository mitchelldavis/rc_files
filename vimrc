execute pathogen#infect()
syntax on
filetype plugin indent on
set number
set autochdir

let $NVIM_TUI_ENABLE_TRUE_COLOR=1
set termguicolors
colorscheme onedark

set laststatus=2
let g:airline_theme='onedark'
let g:airline_powerline_fonts = 1
let g:airline#extensions#tabline#enabled = 1

set tabstop=4
set shiftwidth=4
